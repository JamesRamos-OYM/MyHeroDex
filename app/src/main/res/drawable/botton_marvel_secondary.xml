<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#B71C1C"
                android:endColor="#8B0000"
                android:angle="90" />
            <corners android:radius="8dp" />
            <stroke
                android:width="2dp"
                android:color="#FFD700" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#D32F2F"
                android:endColor="#B71C1C"
                android:angle="90" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#FFAB00" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>

</selector>