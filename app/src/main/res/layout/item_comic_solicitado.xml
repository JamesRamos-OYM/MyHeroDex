<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#E6000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Información del comic -->
        <TextView
            android:id="@+id/txt_nombre_comic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Comic"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="4dp"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

        <TextView
            android:id="@+id/txt_id_comic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID: 12345"
            android:textSize="12sp"
            android:textColor="#CCCCCC"
            android:layout_marginBottom="12dp" />

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btn_ver_detalles"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Ver Detalles"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_marvel_ripple"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"
                android:paddingHorizontal="16dp" />

            <Button
                android:id="@+id/btn_eliminar_comic"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Eliminar"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_marvel_ripple"
                android:minWidth="0dp"
                android:paddingHorizontal="16dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>