<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_marvel">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Imagen de fondo superior -->
        <ImageView
            android:id="@+id/fondo_comics"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/marlvel2proyectofinal"
            android:alpha="0.3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Título -->
        <TextView
            android:id="@+id/titulo_comics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMICS MARVEL"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="32dp"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Card container para solicitar comics -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_comics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#E6000000"
            app:layout_constraintTop_toBottomOf="@id/titulo_comics"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Subtítulo -->
                <TextView
                    android:id="@+id/subtitulo_comics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecciona un comic para solicitar"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="24dp" />

                <!-- Label del spinner -->
                <TextView
                    android:id="@+id/label_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comics disponibles:"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <!-- Spinner de comics -->
                <Spinner
                    android:id="@+id/spinner_comics"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:layout_marginBottom="24dp"
                    android:padding="12dp" />

                <!-- Botón solicitar -->
                <Button
                    android:id="@+id/btn_solicitar_comic"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="SOLICITAR COMIC"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_marvel_ripple"
                    android:elevation="4dp"
                    android:fontFamily="sans-serif-black" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Texto informativo adicional -->
        <TextView
            android:id="@+id/info_adicional"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Los comics se cargan desde la API oficial de Marvel.\nSelecciona uno y solicítalo para agregarlo a tu colección."
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="24dp"
            android:alpha="0.8"
            app:layout_constraintTop_toBottomOf="@id/card_comics"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Imagen de fondo para sección comics solicitados -->
        <ImageView
            android:id="@+id/fondo_comics_solicitados"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pf_comics"
            android:alpha="0.3"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/info_adicional"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Sección de Comics Solicitados -->
        <TextView
            android:id="@+id/txt_comics_solicitados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mis Comics Solicitados"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="56dp"
            android:layout_marginStart="24dp"
            android:visibility="gone"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            app:layout_constraintTop_toBottomOf="@id/info_adicional"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- RecyclerView para comics solicitados -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_comics_solicitados"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/txt_comics_solicitados"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>